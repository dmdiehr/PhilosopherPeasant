﻿@{
    ViewData["Title"] = "Articles Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IList<PhilosopherPeasant.Models.Article>

<h3>@Html.DisplayFor(x => x[0].Writer.Name)'s Articles</h3>



@foreach (var article in Model)
{
    <p>@Html.DisplayFor(m => article.Title)</p>
    <p>@Html.DisplayFor(m => article.Body)</p>
    <p>@Html.DisplayFor(m => article.PublishDate)</p>

    <p>@Html.ActionLink("Edit", "Edit", new { id = article.ArticleId }) | @Html.ActionLink("Delete", "Delete", new { id = article.ArticleId })</p>
}
